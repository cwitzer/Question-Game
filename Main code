#creating a quiz 
import time
import os

def clean():
    if os.name == 'nt':
        _ = os.system('cls')
        
def question_one():
    global missed 
    global score
    global total
    missed = 0
    score = 0
    total = 10
    display_A_one = ("Question 1: Who was the Second President?\n ")
    for i in display_A_one:
        print(i,end="",flush=True)
        time.sleep(0.0300)
    #
    display_B_one = input("\n1.Thomas Jefferson\n2.Abraham lincoln\n3.John Adams\nAnswer: ")
    if display_B_one.lower() == "John Adams" or display_B_one == "3":
        time.sleep(0.500)
        score +=1
        print("\nCorrect!","\nCurrent:",score,"/",total,"\nMissed:",missed )
        time.sleep(2)
        clean()
        question_two()
        

    
    else:
        time.sleep(0.500)
        missed = missed +1
        print("\nINCORRECT!!!","\nMissed:",missed)
        time.sleep(2)
        clean()
        question_two()

def question_two():
    global missed 
    global score
    global total

   
    display_A_two = ("Question 2: How many continents are there?\n ")
    for b in display_A_two:
        print(b,end="",flush=True)
        time.sleep(0.0300)
    #
    display_B_two = input("\n1: 7\n2: 4\n3: 5\nAnswer: ")
    if display_B_two == "1":
        time.sleep(0.500)
        score +=1
        print("\nCorrect!","\nCurrent score:",score,"/",total,"\nMissed is:",missed)
        time.sleep(2)
        clean()
        question_three()
    
    
    else:
        missed = missed +1
        print("\nIncorrect, try again","\nMissed:",missed)
        time.sleep(2)
        clean()
        question_three()
          
def question_three():
    global missed 
    global score
    global total

 
    display_A_three = ("Question 3: During the creation of America what phrase in the Declaration of Independence was NOT a reflection of America's values\n")
    for b in display_A_three:
        print(b,end="",flush=True)
        time.sleep(0.0300)
        
    time.sleep(1)
    display_B_three = input("\n1.Life, Liberty and the pursuit of Happiness\n2.Liberty shall be given by the goverment\n3.All men are created equal\nAnswer: ")
    if display_B_three == "2" or display_B_three.lower() == "Americans holding absolute power":
        time.sleep(0.500)
        score +=1
        print("\nCorrect!","\nCurrent score:",score,"/",total,"\nMissed is:",missed)
        time.sleep(2)
        clean()
        question_four()
       
        
    
    else:
        missed = missed +1
        print("\nIncorrect, try again","\nMissed:",missed)
        time.sleep(2)
        clean()
        question_four()

