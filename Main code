def question_ten():
    global missed 
    global score
    global total

   
    display_A_ten = ("Question 10: Who was the key person responsible for the development of the atomic bomb, and who played the main supporting role in helping them?\n")
    for h in display_A_ten:
        print(h,end="",flush=True)
        time.sleep(0.0300)
        
    #
    display_B_ten = input("\n1.physicist J. Robert Oppenheimer and mathematician Marcel Grossman\n2.physicist J. Robert Oppenheimer and Particle Physics. Donald A. Glaser\n3.physicist J. Robert Oppenheimer and Theoretical physicis Albert Einstein\nAnswer: ")
    if display_B_ten == "1" or display_B_ten.lower() == "physicist J. Robert Oppenheimer and mathematician Marcel Grossman":
        time.sleep(0.500)
        score +=1
        print("\nCorrect!","\nCurrent score:",score,"/",total,"\nMissed is:",missed)
        time.sleep(2)
        clean()
        final()
        
    
    else:
        missed = missed +1
        print("\nIncorrect, try again","\nMissed:",missed)
        time.sleep(2)
        clean()
        final()
    
       
def final():
    global missed 
    global score
    global total
    
    percentage = score / total * int(100)
    
    print("Score:","%",percentage,"\nMissed: ",missed)

question_one()

